{
    "steps_per_print": 64,
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": "auto",
    "wall_clock_breakdown": false,
    "gradient_accumulation_steps": "auto",
    "bf16": {
        "enabled": true
    },
    
    "flops_profiler": {
        "enabled": false,
        "profile_step": 5,
        "module_depth": 1,
        "top_modules": 1,
        "detailed": false,
